<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - AuthServer</title>

    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/AuthServer.styles.css" asp-append-version="true" />
</head>
<body class="flex flex-col h-screen antialiased text-slate-500 dark:text-slate-400 bg-white dark:bg-slate-900">
    <div class="sticky top-0 z-40 w-full backdrop-blur flex-none transition-colors duration-500 lg:z-50 lg:border-b lg:border-slate-900/10 dark:border-slate-50/[0.06] bg-white/95 supports-backdrop-blur:bg-white/60 dark:bg-transparent">
        <div class="max-w-8xl mx-auto">
            <div class="py-4 border-b border-slate-900/10 lg:px-8 lg:border-0 dark:border-slate-300/10 mx-4 lg:mx-0">
                <div class="relative flex items-center">
                    <a class="navbar-brand" asp-area="" asp-page="/Index">AuthServer</a>
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="relative hidden lg:flex items-center ml-auto">
                        <nav class="text-sm leading-6 font-semibold text-slate-700 dark:text-slate-200">
                            <ul class="flex space-x-8">
                                <li>
                                    <a class="hover:text-sky-500 dark:hover:text-sky-400" asp-area="" asp-page="/Index">Home</a>
                                </li>
                                <li>
                                    <a class="hover:text-sky-500 dark:hover:text-sky-400" asp-area="" asp-page="/Privacy">Privacy</a>
                                </li>
                                <li>
                                    <a class="hover:text-sky-500 dark:hover:text-sky-400" asp-page="/Account/Login/Index">Login</a>
                                </li>
                            </ul>
                        </nav>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <main class="overflow-hidden flex flex-col flex-1">
         @RenderBody()
    </main>

    <footer class="border-top footer text-muted">
        <div class="w-full lg:px-8 py-4 mx-4 lg:mx-0">
            &copy; 2024 - AuthServer - <a class="hover:text-sky-500; dark:hover:text-sky-400" asp-page="/Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
@page
@model West94.AuthServer.Pages.Login.Index;

<div class="relative -mt-[5.75rem] overflow-hidden pt-[5.75rem]">
    <partial name="_ValidationSummary" />
    <div class="relative mx-auto mt-20 w-full max-w-container px-4 sm:px-6 lg:px-8">
        @if (Model.View.EnableLocalLogin)
        {
            <div class="flex flex-col">
                <div class="flex min-h-full flex-1 flex-col justify-center px-6 py-12 lg:px-8">
                    <div class="sm:mx-auto sm:w-full sm:max-w-sm">
                        <div class="flex justify-center text-indigo-500">
                            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="size-12">
                                <path fill-rule="evenodd" d="M18.685 19.097A9.723 9.723 0 0 0 21.75 12c0-5.385-4.365-9.75-9.75-9.75S2.25 6.615 2.25 12a9.723 9.723 0 0 0 3.065 7.097A9.716 9.716 0 0 0 12 21.75a9.716 9.716 0 0 0 6.685-2.653Zm-12.54-1.285A7.486 7.486 0 0 1 12 15a7.486 7.486 0 0 1 5.855 2.812A8.224 8.224 0 0 1 12 20.25a8.224 8.224 0 0 1-5.855-2.438ZM15.75 9a3.75 3.75 0 1 1-7.5 0 3.75 3.75 0 0 1 7.5 0Z" clip-rule="evenodd" />
                            </svg>
                        </div>
                        <h2 class="mt-10 text-center text-2xl font-bold leading-9 tracking-tight text-gray-900 dark:text-white">
                            Sign in to your account
                        </h2>
                    </div>

                    <div class="mt-10 sm:mx-auto sm:w-full sm:max-w-sm">
                    <form class="space-y-6" action="#" method="POST">
                            <div class="mt-2">
                                <label asp-for="Input.Username" autofocus class="block text-sm font-medium leading-6 text-gray-900 dark:text-white">Username</label>
                                <div class="mt-2">
                                    <input asp-for="Input.Username" required class="block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6" />
                                </div>
                            </div>

                            <div>
                                <div class="flex items-center justify-between">
                                    <label asp-for="Input.Password" class="block text-sm font-medium leading-6 text-gray-900 dark:text-white">Password</label>
                                    <div class="text-sm">
                                        <a href="#" class="font-semibold text-indigo-500 hover:text-indigo-400">Forgot password?</a>
                                    </div>
                                </div>

                                <div class="mt-2">
                                    <input asp-for="Input.Password" class="block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6" />
                                </div>
                            </div>

                            <div>
                                <button type="submit" class="flex w-full justify-center rounded-md bg-indigo-500 px-3 py-1.5 text-sm font-semibold leading-6 text-white shadow-sm hover:bg-indigo-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600">
                                    Sign n
                                </button>
                            </div>
                    </form> 
                    </div>
                </div>
            </div>
        }
    </div>
</div>